# Python FastAPI Environment Variables
# ===================================

# Server Configuration
PORT=8008
HOST=0.0.0.0

# Model Configuration
MODEL_BASE_PATH=/app/models
MODEL_PAIRS=en-fr
HF_HUB_OFFLINE=1

# Security
CORS_ORIGINS=https://your-frontend-app.railway.app,https://your-backend-app.railway.app

# Logging
LOG_LEVEL=info

# Performance
MAX_TEXT_LENGTH=512
MAX_FILE_SIZE=10485760

# Memory Management
TORCH_CUDA_VISIBLE_DEVICES=
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128

# Model Loading
MODEL_LOAD_TIMEOUT=300
TOKENIZER_LOAD_TIMEOUT=60

# File Processing
TEMP_DIR=/tmp
MAX_CONCURRENT_REQUESTS=10 