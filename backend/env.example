# Node.js Backend Environment Variables
# =====================================

# Server Configuration
PORT=5000
NODE_ENV=production

# CORS Configuration
FRONTEND_URL=https://your-frontend-app.railway.app

# Python FastAPI Service URL (Railway internal networking)
PYTHON_API_URL=https://your-python-service.railway.app

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/plain,text/html,application/json

# Logging
LOG_LEVEL=info

# Database (for future use)
# MONGODB_URI=mongodb://localhost:27017/translation-app

# API Keys (for future external services)
# GOOGLE_TRANSLATE_API_KEY=your_google_api_key
# DEEPL_API_KEY=your_deepl_api_key

# Security
JWT_SECRET=your_jwt_secret_key_here 