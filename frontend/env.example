# React Frontend Environment Variables
# ===================================

# API Configuration
REACT_APP_API_URL=https://your-backend-app.railway.app
REACT_APP_PYTHON_API_URL=https://your-python-service.railway.app

# Environment
NODE_ENV=production
GENERATE_SOURCEMAP=false

# Build Configuration
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=Language Translation App

# Feature Flags
REACT_APP_ENABLE_FILE_TRANSLATION=true
REACT_APP_ENABLE_HISTORY=true
REACT_APP_ENABLE_SPEECH=true

# Analytics (for future use)
# REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id
# REACT_APP_SENTRY_DSN=your_sentry_dsn

# External Services (for future use)
# REACT_APP_GOOGLE_TRANSLATE_API_KEY=your_google_api_key
